<%= form_for @user, url: {action: "create_account"}, html: {class: "nifty_form"} do |f| %>
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name %>
  <%= f.email_field :email %>
  <%= f.password_field :password %>
  <!-- <%= f.password_field :password_confirmation %> -->
  <%= submit_tag("Sign up") %>
<% end %>